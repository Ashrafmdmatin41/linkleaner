[Unit]
Description=linkleaner service
After=network.target

[Service]
Restart=on-abort
Type=simple
User=bot
WorkingDirectory=/home/bot
EnvironmentFile=/home/bot/linkleaner.config
ExecStart=/usr/bin/linkleaner
ExecReload=/bin/kill -USR1 $MAINPID
KillMode=mixed
KillSignal=SIGINT
TimeoutStopSec=10s

# Security
PrivateTmp=true
ProtectSystem=full
ProtectControlGroups=true
ProtectKernelModules=true
ProtectKernelTunables=true
PrivateDevices=true
SystemCallArchitectures=native

[Install]
WantedBy=multi-user.target
